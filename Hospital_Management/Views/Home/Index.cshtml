@{
    ViewData["Title"] = "Home Page";
}

<div>
    <!-- ================= WELCOME ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Orthoc Hospital Management System</h1>
        <p class="text-muted mt-2">
            Manage patients, doctors, and hospital records efficiently.
        </p>
    </div>

    <!-- ================= QUICK ACTIONS ================= -->
    <div class="row justify-content-center">

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">Patients</h5>
                    <p class="card-text">View & manage patient records</p>
                    <a asp-controller="Admin" asp-action="Details"
                       class="btn btn-success w-100">
                        Go
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">Doctors</h5>
                    <p class="card-text">Doctor information & details</p>
                    <a asp-controller="Home" asp-action="Doctors"
                       class="btn btn-primary w-100">
                        Go
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">Departments</h5>
                    <p class="card-text">Hospital departments list</p>
                    <a asp-controller="Home" asp-action="Departments"
                       class="btn btn-info w-100 text-white">
                        Go
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>
